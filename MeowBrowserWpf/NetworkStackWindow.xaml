<Window x:Class="MeowBrowser.NetworkStackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="网络堆栈" Height="400" Width="800">
    <Grid>
        <ListBox Name="NetworkList">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Method}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Url}" />
                        <TextBlock Text="{Binding StatusCode}" />
                        <TextBlock Text="{Binding ContentType}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>