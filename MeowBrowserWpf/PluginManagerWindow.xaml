<Window x:Class="MeowBrowser.PluginManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeowBrowser"
        mc:Ignorable="d"
            Title="插件管理" Height="400" Width="600">
    <Grid>
        <ListBox Name="PluginList">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" Width="200"/>
                        <TextBlock Text="{Binding Loaded}" Width="100"/>
                        <TextBlock Text="{Binding Unloaded}" Width="100"/>
                        <TextBlock Text="{Binding ErrorMessage}" Width="200"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
