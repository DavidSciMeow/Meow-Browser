<UserControl x:Class="MeowBrowser.BrowserTabPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MeowBrowser"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             Height="Auto" Width="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 导航栏 -->
            <RowDefinition Height="*"/>
            <!-- WebView2 -->
        </Grid.RowDefinitions>

        <!-- 导航栏 -->
        <Grid Grid.Row="0" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Back -->
                <ColumnDefinition Width="Auto"/>
                <!-- Forward -->
                <ColumnDefinition Width="Auto"/>
                <!-- Refresh -->
                <ColumnDefinition Width="*"/>
                <!-- 地址栏 -->
            </Grid.ColumnDefinitions>
            <Button x:Name="BackButton" Content="←" Width="40" Grid.Column="0"/>
            <Button x:Name="ForwardButton" Content="→" Width="40" Grid.Column="1"/>
            <Button x:Name="RefreshButton" Content="⟳" Width="40" Grid.Column="2"/>
            <TextBox x:Name="AddressBar" Margin="0,0,5,0" VerticalAlignment="Center" Grid.Column="3" KeyDown="AddressBar_KeyDown"/>
        </Grid>

        <!-- WebView2 浏览器 -->
        <wv2:WebView2 x:Name="WebView" Grid.Row="1"/>
    </Grid>
</UserControl>