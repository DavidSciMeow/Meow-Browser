<metro:MetroWindow x:Class="MeowBrowser.ThemeSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Theme Settings" Height="520" Width="400">
    <StackPanel Margin="24">
        <TextBlock Text="You can switch theme mode, accent color, font, font size and window corner radius below." FontWeight="Bold" FontSize="14" Margin="0,0,0,12"/>
        <TextBlock Text="Theme Mode" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
        <ComboBox x:Name="ThemeComboBox" Margin="0,0,0,16" Height="32">
            <ComboBoxItem Content="Light"/>
            <ComboBoxItem Content="Dark"/>
        </ComboBox>
        <TextBlock Text="Accent Color" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
        <ComboBox x:Name="AccentComboBox" Margin="0,0,0,16" Height="32">
            <ComboBoxItem Content="Blue"/>
            <ComboBoxItem Content="Red"/>
            <ComboBoxItem Content="Green"/>
            <ComboBoxItem Content="Purple"/>
            <ComboBoxItem Content="Orange"/>
            <ComboBoxItem Content="Amber"/>
            <ComboBoxItem Content="Lime"/>
            <ComboBoxItem Content="Emerald"/>
            <ComboBoxItem Content="Teal"/>
            <ComboBoxItem Content="Cyan"/>
            <ComboBoxItem Content="Indigo"/>
            <ComboBoxItem Content="Pink"/>
            <ComboBoxItem Content="Magenta"/>
            <ComboBoxItem Content="Yellow"/>
            <ComboBoxItem Content="Brown"/>
            <ComboBoxItem Content="Olive"/>
            <ComboBoxItem Content="Steel"/>
            <ComboBoxItem Content="Mauve"/>
            <ComboBoxItem Content="Taupe"/>
            <ComboBoxItem Content="Sienna"/>
        </ComboBox>
        <TextBlock Text="Font Family" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
        <ComboBox x:Name="FontComboBox" Margin="0,0,0,16" Height="32">
            <ComboBoxItem Content="Segoe UI"/>
            <ComboBoxItem Content="Microsoft YaHei"/>
            <ComboBoxItem Content="Arial"/>
            <ComboBoxItem Content="Consolas"/>
            <ComboBoxItem Content="Times New Roman"/>
        </ComboBox>
        <TextBlock Text="Font Size" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
        <Slider x:Name="FontSizeSlider" Minimum="10" Maximum="24" Value="14" TickFrequency="2" IsSnapToTickEnabled="True" Margin="0,0,0,16" Height="32"/>
        <TextBlock Text="Window Corner Radius" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
        <Slider x:Name="CornerRadiusSlider" Minimum="0" Maximum="32" Value="8" TickFrequency="2" IsSnapToTickEnabled="True" Margin="0,0,0,16" Height="32"/>
        <Button Content="Apply" x:Name="ApplyButton" Height="36" Width="100" HorizontalAlignment="Left"/>
    </StackPanel>
</metro:MetroWindow>
